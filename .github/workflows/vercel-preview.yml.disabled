name: Shadow Preview Deploys

on:
  pull_request:
    branches: [ main ]
  workflow_dispatch:

jobs:
  preview:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Setup pnpm
        uses: pnpm/action-setup@v2
        with:
          version: 10

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'pnpm'

      - name: Install Dependencies
        run: pnpm install --frozen-lockfile

      - name: Build Preview
        run: pnpm run build

      - name: Deploy to Vercel (Preview)
        id: preview
        run: |
          npx vercel --yes \
            --token=${{ secrets.VERCEL_TOKEN }} \
            --org-id=${{ secrets.VERCEL_ORG_ID }} \
            --project-id=${{ secrets.VERCEL_PROJECT_ID }} > preview.log
          cat preview.log

      - name: Upload Logs
        uses: actions/upload-artifact@v4
        with:
          name: preview-logs
          path: preview.log
