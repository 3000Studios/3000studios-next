File: components/world/ParticleField.tsx
"use client";

import { useEffect } from "react";

export default function ParticleField() {
  useEffect(() => {
    const canvas = document.getElementById("particles");
    const ctx = canvas.getContext("2d");

    const particles = [];

    const spawn = (x, y, color) => {
      particles.push({
        x,
        y,
        vx: (Math.random() - 0.5) * 4,
        vy: (Math.random() - 0.5) * 4,
        life: 80,
        color
      });
    };

    window.addEventListener("shadow-event", (e) => {
      if (e.detail.type === "avatar-heard") {
        spawn(window.innerWidth / 2, window.innerHeight / 2, "#00d4ff");
      }
    });

    const loop = () => {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      for (const p of particles) {
        p.x += p.vx;
        p.y += p.vy;
        p.life--;
        ctx.fillStyle = p.color + Math.min(p.life, 80).toString(16).padStart(2, "0");
        ctx.fillRect(p.x, p.y, 4, 4);
      }

      requestAnimationFrame(loop);
    };

    loop();
  }, []);

  return <canvas id="particles" className="fixed inset-0 pointer-events-none" />;
}


Particles now interact with:

sound

