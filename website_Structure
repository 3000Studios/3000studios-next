File: components/world/LightingEngine.tsx
"use client";

import { useEffect } from "react";

export default function LightingEngine() {
  useEffect(() => {
    const updateLight = (color) => {
      document.documentElement.style.setProperty("--light-color", color);
    };

    window.addEventListener("shadow-event", (e) => {
      if (e.detail.type === "ui-mood") {
        const mood = e.detail.value;

        if (mood === "gold-conversion-mode") updateLight("#ffc300");
        if (mood === "purple-alert") updateLight("#9b5de5");
        if (mood === "teal-focus") updateLight("#2ec4b6");
        if (mood === "sapphire-hype") updateLight("#4361ee");
      }
    });
  }, []);

  return null;
}


Your website now breathes with color.

