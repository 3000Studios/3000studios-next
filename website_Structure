File: lib/shadow/os/learn.ts
import { kv } from "@vercel/kv";

export async function learnFrom(event) {
  const history = (await kv.get("shadow-history")) || [];
  history.push(event);

  await kv.set("shadow-history", history.slice(-500)); // keep last 500 events

  return true;
}


Integrate into kernel:

