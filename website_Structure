import { motion } from "framer-motion";

export default function LuxeSection({ title, content }) {
  return (
    <motion.div
      initial={{ opacity: 0, y: 100 }}
      whileInView={{ opacity: 1, y: 0 }}
      viewport={{ once: true }}
      transition={{ duration: 1.2 }}
      className="max-w-6xl mx-auto py-32 px-10 text-center"
    >
      <h3 className="text-5xl font-black bg-gradient-to-r from-gold to-sapphire bg-clip-text text-transparent mb-4">
        {title}
      </h3>
      <p className="text-2xl text-sapphire/80 leading-relaxed">{content}</p>
    </motion.div>
  );
}


