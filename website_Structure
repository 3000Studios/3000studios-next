File: components/avatar/ShadowChat.tsx
"use client";

import { useState } from "react";
import AvatarMouthSync from "./AvatarMouthSync";

export default function ShadowChat() {
  const [response, setResponse] = useState("");
  const [mouthAudio, setMouthAudio] = useState("");

  const ask = async (msg: string) => {
    const r = await fetch("/api/shadow/prime", {
      method: "POST",
      body: JSON.stringify({ input: msg, role: "visitor" }),
    });

    const j = await r.json();
    setResponse(j.text);

    const tts = await fetch("/api/shadow/tts", {
      method: "POST",
      body: JSON.stringify({ text: j.text }),
    });
    const blob = await tts.blob();

    const url = URL.createObjectURL(blob);
    setMouthAudio(url);
  };

  return (
    <div className="shadow-chat-container">
      <AvatarMouthSync audioUrl={mouthAudio} />
      <div className="absolute bottom-8 left-1/2 -translate-x-1/2 w-[400px]">
        <input
          className="w-full p-4 bg-black/60 border border-sapphire rounded-xl"
          placeholder="Say something to Shadow‚Ä¶"
          onKeyDown={(e) => e.key === "Enter" && ask(e.currentTarget.value)}
        />
      </div>

      <div className="absolute bottom-20 left-1/2 -translate-x-1/2 text-xl text-sapphire max-w-[500px] text-center">
        {response}
      </div>
    </div>
  );
}

