"use client";

export default function SoundControl() {
  const setVolume = (v: number) => {
    document.querySelectorAll("audio").forEach((a: any) => {
      a.volume = v;
    });
  };

  return (
    <div className="bg-black/40 p-6 rounded-xl border border-indigo-500 mt-6">
      <h2 className="text-2xl font-bold text-indigo-300 mb-4">
        Audio Control
      </h2>

      <div className="flex space-x-4">
        <button
          onClick={() => setVolume(0)}
          className="px-4 py-2 bg-red-600 rounded-lg"
        >
          Mute
        </button>

        <button
          onClick={() => setVolume(0.2)}
          className="px-4 py-2 bg-yellow-400 text-black rounded-lg"
        >
          Low
        </button>

        <button
          onClick={() => setVolume(0.35)}
          className="px-4 py-2 bg-green-400 text-black rounded-lg"
        >
          Medium
        </button>

        <button
          onClick={() => setVolume(0.6)}
          className="px-4 py-2 bg-blue-400 text-black rounded-lg"
        >
          High
        </button>
      </div>
    </div>
  );
}

