"use client";

import useAnalyticsStream from "@/lib/matrix/useAnalyticsStream";
import { useState, useEffect } from "react";

export default function LiveVisitors() {
  const events = useAnalyticsStream();
  const [visitors, setVisitors] = useState(0);

  useEffect(() => {
    const visitCount = events.filter(e => e.type === "visit").length;
    setVisitors(visitCount);
  }, [events]);

  return (
    <div className="bg-black/40 p-6 rounded-xl border border-sapphire">
      <h2 className="text-3xl font-bold text-sapphire">Visitors Online</h2>
      <p className="text-5xl font-black mt-4">{visitors}</p>
    </div>
  );
}

