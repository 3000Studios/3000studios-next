File: components/world/WorldEngine.tsx
"use client";

import { useEffect, useState } from "react";

export default function WorldEngine({ emotion }) {
  const [mood, setMood] = useState("neutral");

  useEffect(() => {
    if (!emotion) return;

    const map = {
      neutral: "rgba(10,10,10,0.8)",
      excited: "linear-gradient(45deg, #06f, #0ff, #06f)",
      aggressive: "radial-gradient(circle, #f00, #300)",
      happy: "linear-gradient(135deg, #ff0, #f90)",
      curious: "linear-gradient(135deg, #8f00ff, #32006e)"
    };

    const bg = map[emotion] || map["neutral"];
    document.body.style.background = bg;

    setMood(emotion);
  }, [emotion]);

  return null;
}


Your whole site changes mood based on Shadow PRIME.

