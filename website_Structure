File: app/api/shadow/prime/execute/route.ts
import { interpretCommand } from "@/lib/matrix/lucid/interpret";
import { applyAction } from "@/lib/matrix/lucid/actions";
import { shadowPersonality } from "@/lib/shadow/personality";
import { computeAvatarState } from "@/lib/shadow/avatarEngine";
import { NextResponse } from "next/server";
import { useShadowOS } from "@/lib/shadow/os/state";

export async function POST(req: Request) {
  const { input } = await req.json();

  // Generate personality response for YOU (champ mode)
  const text = await shadowPersonality(input, { role: "champ" });

  // Update avatar + world mood
  const state = computeAvatarState(text);
  const os = useShadowOS.getState();
  os.updateEmotion(state.emotion, state.intensity);

  // Interpret as action, apply if needed
  const parsed = await interpretCommand(input);
  await applyAction(parsed);

  return NextResponse.json({ ok: true, text, state, parsed });
}


This is the god-mode handler.
Everything responds to YOU.

