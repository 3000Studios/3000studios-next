Frontend Behavior Tracker

components/visitor/BehaviorTrack.tsx

"use client";

import { useEffect } from "react";

export default function BehaviorTrack() {
  useEffect(() => {
    let scrolls = 0;
    let clicks = 0;
    let idle = 0;

    document.addEventListener("click", () => clicks++);
    document.addEventListener("scroll", () => scrolls++);

    const interval = setInterval(() => {
      idle++;
      fetch("/api/visitor/behavior", {
        method: "POST",
        body: JSON.stringify({ scrolls, clicks, idle }),
      });
    }, 4000);

    return () => clearInterval(interval);
  }, []);

  return null;
}

API Route

app/api/visitor/behavior/route.ts

import { NextResponse } from "next/server";
import { pushAnalytics } from "@/lib/matrix/analytics";

export async function POST(req: Request) {
  const data = await req.json();

  pushAnalytics({
    type: "visitor-behavior",
    ...data
  });

  return NextResponse.json({ ok: true });
}

