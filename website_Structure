"use client";

import { useShadowOS } from "@/lib/shadow/os/state";
import { motion } from "framer-motion";
import Link from "next/link";

export default function NavBar() {
  const { uiMood } = useShadowOS();

  const moodColors = {
    neutral: "shadow-gray-800",
    gold: "shadow-yellow-500",
    blue: "shadow-blue-500",
    "purple-alert": "shadow-purple-500",
    teal: "shadow-teal-400",
    "cyber-cyan": "shadow-cyan-400"
  };

  return (
    <motion.nav
      initial={{ y: -80, opacity: 0 }}
      animate={{ y: 0, opacity: 1 }}
      transition={{ duration: 1.2 }}
      className={`fixed top-0 w-full py-6 px-12 flex justify-between items-center backdrop-blur-xl bg-black/40 border-b border-gold z-50 ${moodColors[uiMood]}`}
    >
      <Link href="/" className="text-3xl font-black text-gold">3000</Link>

      <div className="flex space-x-10 text-xl">
        <Link className="hover:text-gold" href="/store">Store</Link>
        <Link className="hover:text-sapphire" href="/live">Live</Link>
        <Link className="hover:text-teal" href="/projects">Projects</Link>
        <Link className="hover:text-purple-400" href="/blog">Blog</Link>
        <Link className="hover:text-gold" href="/matrix">The Matrix</Link>
      </div>
    </motion.nav>
  );
}


