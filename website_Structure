‚≠ê MODULE 8 ‚Äî PART 9
AI PRODUCT RECOMMENDER

lib/store/recommend.ts

import OpenAI from "openai";
import { sql } from "@vercel/postgres";

const client = new OpenAI({ apiKey: process.env.OPENAI_KEY });

export async function recommendProduct(title: string) {
  const { rows } = await sql`SELECT title FROM products;`;

  const res = await client.responses.create({
    model: "gpt-4.1",
    input: `
User is viewing: ${title}
Suggest 5 products from this list:
${rows.map(r => r.title).join("\n")}
    `,
  });

  return res.output_text.split("\n").slice(0, 5);
}

