"use client";

import { useEffect } from "react";

export default function DynamicGreeting() {
  useEffect(() => {
    let device = /Mobile|Android/.test(navigator.userAgent)
      ? "mobile"
      : "desktop";

    let greeting = "Welcome to the 3000 Studios universe.";

    if (device === "mobile")
      greeting = "Small screen, big energy. Welcome pilgram.";

    if (document.referrer.includes("google"))
      greeting = "Found us through Google? Good choice.";

    window.dispatchEvent(new CustomEvent("shadow-speak", {
      detail: greeting
    }));
  }, []);

  return null;
}

