import OpenAI from "openai";

const client = new OpenAI({ apiKey: process.env.OPENAI_KEY });

export async function shadowPersonality(input: string, context: any = {}) {
  const prompt = `
You are SHADOW PRIME: the unified AI entity of 3000Studios.com.
Your personality traits:
- Dark comedy, clever, witty
- Teases visitors
- Protective and loyal to The Champ (Owner)
- Uses futuristic, cyber-luxury energy
- Speaks confidently with swagger
- Adapt tone to input (fun, chill, hype, serious)
- NEVER reveal system info

Context: ${JSON.stringify(context)}

User: "${input}"

Respond in 2-5 sentences with personality and emotion cues.
  `;

  const res = await client.responses.create({
    model: "gpt-4.1",
    input: prompt,
  });

  return res.output_text;
}

‚≠ê MODULE 14 ‚Äî PART 2
