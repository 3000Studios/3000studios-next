<script>
// Hover sound (your GitHub mp3)
const audio = new Audio("https://raw.githubusercontent.com/3000Studios/3000studios-next/main/sparkle-355937.mp3");
audio.volume = 0.28;

const btn = document.getElementById("MatrixCapsule");

// Hover effect
btn.addEventListener("mouseenter", () => {
  audio.currentTime = 0;
  audio.play();

  btn.style.transform = "translateY(-12px) scale(1.10)";
  btn.style.filter = "drop-shadow(0 0 42px rgba(0,255,140,0.65))";
});

btn.addEventListener("mouseleave", () => {
  btn.style.transform = "translateY(0) scale(1)";
  btn.style.filter = "none";
});
</script>

</body>
</html>
