import { sql } from "@vercel/postgres";
import OpenAI from "openai";

const client = new OpenAI({ apiKey: process.env.OPENAI_KEY });

export async function revenuePulse() {
  const { rows } = await sql`SELECT * FROM store_events LIMIT 500;`;

  const prompt = `
Analyze these store interaction events:
${JSON.stringify(rows)}

Optimize:
- pricing
- product positioning
- product descriptions
- cross-sells
- upsells
- categories

Output a command for the OS to update the store.
  `;

  const result = await client.responses.create({
    model: "gpt-4.1",
    input: prompt
  });

  return result.output_text;
}


