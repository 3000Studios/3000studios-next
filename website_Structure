import useAnalyticsStream from "@/lib/matrix/useAnalyticsStream";

export default function InstinctLog() {
  const events = useAnalyticsStream().filter(
    (e) => e.type === "instinct-action"
  );

  return (
    <div className="bg-black/40 border border-gold p-6 rounded-xl">
      <h2 className="text-3xl font-bold text-gold mb-4">
        Shadow PRIME ‚Äî Instinct Log
      </h2>

      <div className="space-y-4 max-h-[400px] overflow-y-auto">
        {events.map((e, i) => (
          <div key={i} className="text-sapphire text-lg">
            {e.detail.action}
          </div>
        ))}
      </div>
    </div>
  );
}


