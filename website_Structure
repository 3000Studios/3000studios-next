"use client";

import { useState } from "react";

export default function AvatarControl() {
  const [emotion, setEmotion] = useState("neutral");

  const update = async (v: string) => {
    setEmotion(v);
    await fetch("/api/shadow/avatar", {
      method: "POST",
      body: JSON.stringify({ emotion: v }),
    });
  };

  const emotions = ["neutral", "happy", "curious", "angry", "excited"];

  return (
    <div className="bg-black/40 p-6 rounded-xl border border-sapphire">
      <h2 className="text-3xl text-sapphire font-bold mb-4">Avatar Control</h2>

      <div className="grid grid-cols-2 gap-4">
        {emotions.map((e, i) => (
          <button
            key={i}
            onClick={() => update(e)}
            className={`p-3 rounded-xl text-black font-bold ${
              emotion === e ? "bg-sapphire" : "bg-gold"
            }`}
          >
            {e.toUpperCase()}
          </button>
        ))}
      </div>
    </div>
  );
}

