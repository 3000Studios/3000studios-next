"use client";

import { useEffect, useState } from "react";
import { motion } from "framer-motion";

export default function HeroIntro() {
  const [ready, setReady] = useState(false);

  useEffect(() => {
    setTimeout(() => setReady(true), 500);
  }, []);

  return (
    <div className="relative w-full h-screen flex flex-col justify-center items-center text-center">
      
      {/* Fullscreen dramatic fog glow */}
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: ready ? 0.3 : 0 }}
        transition={{ duration: 3 }}
        className="absolute inset-0 bg-gradient-to-b from-[#00ccff33] via-[#00000000] to-[#000000]"
      />

      {/* Main Title */}
      <motion.h1
        initial={{ opacity: 0, y: 80 }}
        animate={{ opacity: ready ? 1 : 0, y: ready ? 0 : 80 }}
        transition={{ duration: 1.6, ease: "easeOut" }}
        className="text-7xl md:text-8xl font-black bg-gradient-to-r from-gold to-sapphire bg-clip-text text-transparent drop-shadow-2xl"
      >
        3000 STUDIOS
      </motion.h1>

      {/* Subtitle */}
      <motion.h2
        initial={{ opacity: 0, y: 40 }}
        animate={{ opacity: ready ? 1 : 0, y: ready ? 0 : 40 }}
        transition={{ delay: 0.8, duration: 1.4 }}
        className="text-2xl md:text-3xl text-sapphire/80 mt-6"
      >
        The Future. Built. Alive.
      </motion.h2>

      {/* Shadow Avatar Entrance */}
      <motion.div
        initial={{ opacity: 0, scale: 0.6 }}
        animate={{ opacity: ready ? 1 : 0, scale: ready ? 1 : 0.6 }}
        transition={{ delay: 1.4, duration: 1.5, ease: "easeOut" }}
        className="absolute bottom-10"
      >
        <div id="shadow-avatar-mount"></div>
      </motion.div>
    </div>
  );
}


