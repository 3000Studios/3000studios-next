API Route

app/api/store/upsell/route.ts

import { NextResponse } from "next/server";
import { sql } from "@vercel/postgres";
import OpenAI from "openai";

const client = new OpenAI({ apiKey: process.env.OPENAI_KEY });

export async function POST(req: Request) {
  const { behavior } = await req.json();

  const { rows } = await sql`SELECT title FROM products LIMIT 150;`;

  const prompt = `
Visitor behavior: ${JSON.stringify(behavior)}

Recommend 3 products they are most likely to buy.
Return JSON array only.
Available products:
${rows.map(r => r.title).join("\n")}
  `;

  const res = await client.responses.create({
    model: "gpt-4.1",
    input: prompt,
  });

  return NextResponse.json(JSON.parse(res.output_text));
}

