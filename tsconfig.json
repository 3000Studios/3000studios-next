{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",

    "strict": true,
    "noEmit": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./*"]
    },

    "types": ["node"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },

  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "components/**/*.ts", "components/**/*.tsx", "app/**/*.ts", "app/**/*.tsx"],

  "exclude": ["node_modules", "_disabled", "**/_disabled/**", ".next", "dist"]
}
