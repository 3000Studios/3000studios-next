<svg width="1024" height="1024" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="bgGrad" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#000014;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:1" />
    </radialGradient>
    <linearGradient id="neonGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00ffff;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#0080ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff00ff;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="10" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1024" height="1024" fill="url(#bgGrad)"/>
  
  <!-- Outer circle with rotation -->
  <circle cx="512" cy="512" r="420" fill="none" stroke="url(#neonGrad)" stroke-width="8" filter="url(#glow)">
    <animateTransform
      attributeName="transform"
      type="rotate"
      from="0 512 512"
      to="360 512 512"
      dur="20s"
      repeatCount="indefinite"/>
  </circle>
  
  <!-- Inner glow circle -->
  <circle cx="512" cy="512" r="320" fill="url(#neonGrad)" opacity="0.3" filter="url(#glow)">
    <animate attributeName="r" values="320;340;320" dur="4s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="0.3;0.6;0.3" dur="4s" repeatCount="indefinite"/>
  </circle>
  
  <!-- Center S symbol -->
  <text x="512" y="600" font-family="Arial Black, sans-serif" font-size="400" font-weight="900" fill="url(#neonGrad)" text-anchor="middle" filter="url(#glow)">
    S
  </text>
  
  <!-- Rotating rings -->
  <circle cx="512" cy="512" r="250" fill="none" stroke="#ff00ff" stroke-width="4" opacity="0.6" filter="url(#glow)">
    <animateTransform
      attributeName="transform"
      type="rotate"
      from="360 512 512"
      to="0 512 512"
      dur="10s"
      repeatCount="indefinite"/>
  </circle>
  
  <circle cx="512" cy="512" r="180" fill="none" stroke="#00ffff" stroke-width="3" opacity="0.8" filter="url(#glow)">
    <animateTransform
      attributeName="transform"
      type="rotate"
      from="0 512 512"
      to="360 512 512"
      dur="15s"
      repeatCount="indefinite"/>
  </circle>
</svg>
