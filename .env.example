VENDOR_FEED_URL_SHAREASALE=https://shareasale.example.com/feed.json
VENDOR_FEED_URL_AMAZON=https://amazon.example.com/products.json
VENDOR_FEED_URL_SHOPIFY=https://shopify-store.example.com/products.json

# Fulfillment / webhooks
FULFILLMENT_SIGNING_SECRET=replace-me

