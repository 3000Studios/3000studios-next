VOICE_LANGUAGE=en-US
VOICE_CONTINUOUS=false

# ==========================================
# AUTHENTICATION
# ==========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple Sign In
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# JWT Secret for token signing
JWT_SECRET=your-jwt-secret-min-32-chars

# ==========================================
# ANALYTICS
# ==========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (auto-populated)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=auto-populated-by-vercel

# ==========================================
# AFFILIATE TRACKING
# ==========================================
AFFILIATE_SECRET=your-affiliate-secret-key
AFFILIATE_COOKIE_DURATION=30
AFFILIATE_COMMISSION_RATE=10

# ==========================================
# APPLICATION CONFIG
# ==========================================
# Base URL for your application (REQUIRED)
NEXT_PUBLIC_BASE_URL=https://3000studios.com

# Site URL for metadata and canonical URLs (REQUIRED)
# IMPORTANT: Must be literal value, NOT a secret reference
# Correct: https://3000studios.com
# Wrong: @next_public_site_url (causes circular reference)
NEXT_PUBLIC_SITE_URL=https://3000studios.com

# WebSocket signaling server for streaming
NEXT_PUBLIC_SIGNAL_SERVER=wss://signal.3000studios.com

# Google Maps API for contact page
NEXT_PUBLIC_MAPS_API=your-google-maps-api-key

# Deployment webhook URL (optional, for real-time status updates)
DEPLOYMENT_WEBHOOK_URL=https://3000studios.com/api/deployment/webhook
