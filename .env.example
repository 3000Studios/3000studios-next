# 3000 Studios Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ==========================================
# CORE ADMIN CREDENTIALS (Matrix Admin Login)
# ==========================================
MATRIX_ADMIN_EMAIL=mr.jwswain@gmail.com
MATRIX_ADMIN_PASSWORD=llllllllll

# ==========================================
# AI SERVICES
# ==========================================
# OpenAI - Used for voice-to-code, content generation, transcription
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude - Alternative AI for code review and generation
CLAUDE_API_KEY=your-anthropic-api-key

# Google Gemini - Multimodal AI for image analysis
GEMINI_API_KEY=your-google-gemini-api-key

# ==========================================
# PAYMENT PROCESSING
# ==========================================
# PayPal - Main payment processor
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Stripe - Card payments
STRIPE_SECRET_KEY=sk_live_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==========================================
# DATABASE
# ==========================================
# MongoDB Atlas - Main database for products, analytics, orders
MONGO_PUBLIC_KEY=your-mongodb-public-key
MONGO_PRIVATE_KEY=your-mongodb-private-key
MONGO_IP=your-mongodb-cluster.mongodb.net

# ==========================================
# CONTENT MANAGEMENT
# ==========================================
# WordPress - Backend CMS integration
WP_URL=https://your-wordpress-site.com
WP_USER=your-wp-username
WP_PASS=your-wp-password

# Vercel Cron security
CRON_SECRET=set_a_long_random_secret_for_vercel_cron

# ==========================================
# COMMUNICATION SERVICES
# ==========================================
# Twilio - SMS and voice notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE=+1234567890

# ==========================================
# HOSTING & DEPLOYMENT
# ==========================================
# IONOS - Hosting provider
IONOS_PUBLIC=your-ionos-public-key
IONOS_SECRET=your-ionos-secret-key

# Vercel - Deployment automation
VERCEL_TOKEN=your-vercel-token

# Google AdSense
ADSENSE_PUBLISHER_ID=pub-xxxxxxxxxxxxxxxx

# ==========================================
# VERSION CONTROL
# ==========================================
# GitHub - Code repository and auto-commit
GITHUB_PAT=your-github-personal-access-token

# ==========================================
# LIVE STREAMING
# ==========================================
# WebRTC - Real-time streaming
WEBRTC_KEY=your-webrtc-api-key
WEBRTC_TURN_URL=turn:your-turn-server.com:3478
WEBRTC_TURN_USER=your-turn-username
WEBRTC_TURN_PASS=your-turn-password

# ==========================================
# INTERNAL SYSTEMS
# ==========================================
# Shadow Overlord - Internal AI systems
SHADOW_VOICE_KEY=your-shadow-voice-key
SHADOW_AI_KEY=your-shadow-ai-key

# ==========================================
# APPLICATION CONFIG
# ==========================================
# Base URL for your application
NEXT_PUBLIC_BASE_URL=https://your-domain.com
# Public site URL (used in payment return URLs)
NEXT_PUBLIC_SITE_URL=https://3000studios.com

# Ads configuration
# Use your live AdSense publisher ID (example below is the one you shared)
NEXT_PUBLIC_ADSENSE_PUBLISHER_ID=ca-pub-5800977493749262

# CSRF protection
CSRF_SECRET=generate_a_long_random_secret

# WebSocket signaling server for streaming
NEXT_PUBLIC_SIGNAL_SERVER=wss://signal.your-domain.com

# Vendor feed URLs for ingestion layer
VENDOR_FEED_URL=https://vendor-api.example.com/products
