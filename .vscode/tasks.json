      "args": ["-File", "C:/3000Studios/shadow/shadow-secrets.ps1", "-Clear"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "âœ… Git: Sync & Push",
      "type": "shell",
      "command": "git",
      "args": [
        "add",
        ".",
        "&&",
        "git",
        "commit",
        "-m",
        "update",
        "&&",
        "git",
        "push",
        "origin",
        "main"
      ],
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "group": {
        "kind": "test"
      }
    },
    {
