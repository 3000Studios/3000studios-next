{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Antigravity AutoSync",
      "type": "shell",
      "command": "bash ./antigravity-autosync.sh",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "Auto Commit (PowerShell)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\auto-commit.ps1"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Dev Server",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "dev"
      ],
      "group": "test",
      "problemMatcher": []
    }
  ]
}
