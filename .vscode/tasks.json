{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ Shadow: Start Dev Server",
      "type": "shell",
      "command": "pwsh.exe",
      "args": [
        "-File",
        "C:/3000Studios/shadow/shadow-dev.ps1"
      ],
      "isBackground": false,
      "problemMatcher": {
        "pattern": {
          "regexp": "^ready - started server.*",
          "line": 1,
          "column": 1,
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Local:.*",
          "endsPattern": "^.*ready.*"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "üîë Shadow: Store API Key",
      "type": "shell",
      "command": "pwsh.exe",
      "args": [
        "-File",
        "C:/3000Studios/shadow/shadow-secrets.ps1",
        "-Store"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "üìã Shadow: List Stored Keys",
      "type": "shell",
      "command": "pwsh.exe",
      "args": [
        "-File",
        "C:/3000Studios/shadow/shadow-secrets.ps1",
        "-List"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "üóëÔ∏è  Shadow: Clear API Key",
      "type": "shell",
      "command": "pwsh.exe",
      "args": [
        "-File",
        "C:/3000Studios/shadow/shadow-secrets.ps1",
        "-Clear"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "‚úÖ Git: Sync & Push",
      "type": "shell",
      "command": "git",
      "args": [
        "add",
        ".",
        "&&",
        "git",
        "commit",
        "-m",
        "update",
        "&&",
        "git",
        "push",
        "origin",
        "main"
      ],
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "type": "npm",
      "script": "lint",
      "label": "npm: lint",
      "detail": "eslint \"src/**/*.{ts,tsx}\"",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "type": "npm",
      "script": "type-check",
      "label": "npm: type-check",
      "detail": "tsc --noEmit",
      "group": "test",
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "npm",
      "script": "test",
      "label": "npm: test",
      "detail": "vitest",
      "group": "test"
    },
    {
      "type": "npm",
      "script": "build",
      "label": "npm: build",
      "detail": "next build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "deploy",
      "label": "npm: deploy",
      "detail": "vercel --prod --yes",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "ü§ñ Full Autopilot Pipeline",
      "dependsOn": ["npm: lint", "npm: type-check", "npm: test", "npm: build"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    }
  ]
}
