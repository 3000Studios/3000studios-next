{
  // =========================================================
  // CORE BEHAVIOR — AUTONOMOUS BUT SAFE
  // =========================================================
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  // Format ONLY on explicit save, not during execution
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  // Run fixes ONLY on manual save
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  // =========================================================
  // AI / ANTIGRAVITY — FULL POWER, GUARDED
  // =========================================================
  "editor.largeFileOptimizations": false,
  "extensions.ignoreRecommendations": false,
  // Remove unsafe / undefined keys
  // antigravity settings intentionally minimal for stability
  // =========================================================
  // VOICE → WEB → CODE (STABLE MODE)
  // =========================================================
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.preview": true,
  // =========================================================
  // NEXT.JS / TAILWIND / UI-UX
  // =========================================================
  "css.validate": false,
  "scss.validate": false,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.classAttributes": [
    "class",
    "className"
  ],
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.showExpandedAbbreviation": "always",
  // =========================================================
  // GIT — FULL AUTO, NO PROMPTS (SAFE)
  // =========================================================
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.smartCommitChanges": "all",
  "git.useEditorAsCommitInput": false,
  "git.terminalAuthentication": true,
  // Force push allowed, but controlled
  "git.allowForcePush": true,
  // =========================================================
  // TERMINAL / CI / DEPLOYMENT
  // =========================================================
  "terminal.integrated.confirmOnExit": "never",
  "terminal.integrated.scrollback": 100000,
  "terminal.integrated.enablePersistentSessions": true,
  // =========================================================
  // PERFORMANCE — LARGE REPO OPTIMIZED
  // =========================================================
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none"
}
