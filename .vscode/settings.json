{
  "$schema": "https://3000studios.ai/schemas/autonomous-system.v1.json",

  /* ======================================================
     EDITOR / VS CODE AUTONOMY (settings.json merged)
  ====================================================== */
  "vscode": {
    "files": {
      "autoSave": "afterDelay",
      "autoSaveDelay": 500,
      "trimTrailingWhitespace": true,
      "insertFinalNewline": true,
      "eol": "\n",
      "watcherExclude": [
        "**/.git/**",
        "**/node_modules/**",
        "**/.next/**",
        "**/.vercel/**",
        "**/dist/**",
        "**/build/**",
        "**/.pnpm-store/**"
      ]
    },

    "editor": {
      "formatOnSave": true,
      "formatOnPaste": true,
      "codeActionsOnSave": [
        "source.fixAll",
        "source.fixAll.eslint",
        "source.organizeImports"
      ],
      "defaultFormatter": "prettier",
      "inlineSuggest": true,
      "acceptSuggestionOnEnter": true,
      "linkedEditing": true,
      "bracketPairColorization": true
    },

    "typescript": {
      "maxMemoryMB": 8192,
      "updateImportsOnMove": true
    },

    "eslint": {
      "enabled": true,
      "mode": "heal-never-block"
    },

    "git": {
      "autoFetch": true,
      "smartCommit": true,
      "noConfirmations": true
    },

    "terminal": {
      "autoApproveCommands": [
        "pnpm",
        "npm",
        "yarn",
        "git",
        "node",
        "npx",
        "vercel",
        "python"
      ]
    },

    "extensions": {
      "allowed": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "github.copilot"
      ],
      "autoRemoveUnapproved": true
    }
  },

  /* ======================================================
     GIT / REPO AUTONOMY
  ====================================================== */
  "gitAutomation": {
    "onChange": [
      "autoFix",
      "autoCommit",
      "autoMerge",
      "autoPush"
    ],
    "branchPolicy": {
      "mainIsTruth": true,
      "noPRs": true,
      "noManualMerges": true
    },
    "commitMessage": "auto: heal optimize deploy"
  },

  /* ======================================================
     DEPLOYMENT (VERCEL)
  ====================================================== */
  "deployment": {
    "platform": "vercel",
    "autoDeploy": true,
    "on": ["commit", "merge"],
    "healthCheck": true,
    "rollbackOnFailure": true,
    "cli": {
      "useVercelCLI": true,
      "environment": "production"
    }
  },

  /* ======================================================
     REVENUE FLOW (PAYPAL + STRIPE)
  ====================================================== */
  "payments": {
    "providers": {
      "paypal": {
        "enabled": true,
        "mode": "primary",
        "verification": "webhook",
        "autoRetry": true,
        "payout": "instant"
      },
      "stripe": {
        "enabled": true,
        "mode": "subscriptions",
        "autoManagePlans": true,
        "autoRetry": true
      }
    },
    "rules": {
      "noDeliveryWithoutPayment": true,
      "idempotentCharges": true,
      "fraudDetection": true
    }
  },

  /* ======================================================
     AUTO PRODUCT + STORE GENERATION
  ====================================================== */
  "storeAutomation": {
    "autoGenerateProducts": true,
    "sources": [
      "aiGenerated",
      "usageBased",
      "bundles"
    ],
    "pricing": {
      "dynamic": true,
      "increaseOnHighConversion": true,
      "discountOnLowConversion": true
    }
  },

  /* ======================================================
     CONTENT + BLOG AUTOMATION
  ====================================================== */
  "contentEngine": {
    "autoBlog": true,
    "frequency": "daily",
    "types": [
      "seoEvergreen",
      "comparison",
      "tutorial",
      "moneyPages"
    ],
    "autoInternalLinking": true,
    "autoCTAInjection": true
  },

  /* ======================================================
     SEO AUTONOMY
  ====================================================== */
  "seo": {
    "autoKeywords": true,
    "autoMeta": true,
    "autoSchema": true,
    "rewriteLowPerformers": true,
    "redirectDeadPages": true
  },

  /* ======================================================
     ANALYTICS → ACTION LOOP
  ====================================================== */
  "analyticsAutomation": {
    "track": [
      "conversion",
      "bounce",
      "revenuePerVisitor",
      "scrollDepth"
    ],
    "actions": {
      "lowConversion": "rewrite",
      "highConversion": "amplify",
      "zeroRevenue": "archive"
    }
  },

  /* ======================================================
     TOOL / DEPENDENCY HYGIENE
  ====================================================== */
  "maintenance": {
    "autoRemoveUnusedDependencies": true,
    "autoArchiveUnusedFiles": true,
    "autoUpdateSafeDependencies": true
  },

  /* ======================================================
     COMMAND ROUTER (YOU SAY IT → IT HAPPENS)
  ====================================================== */
  "commandRouter": {
    "enabled": true,
    "commands": {
      "deploy": ["autoFix", "autoCommit", "deploy"],
      "add product": ["generateProduct", "publish"],
      "write blog": ["generateContent", "seoOptimize", "publish"],
      "optimize site": ["seoAudit", "rewrite", "deploy"],
      "make money": ["generateProduct", "publish", "promote"]
    }
  },

  /* ======================================================
     LEARNING / SELF-IMPROVEMENT
  ====================================================== */
  "learning": {
    "enabled": true,
    "inputs": [
      "repoState",
      "analytics",
      "revenue"
    ],
    "optimizeFor": [
      "conversion",
      "stability",
      "speed"
    ]
  }
}